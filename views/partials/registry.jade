section(class="white_section section_gap", id="registry")
	div(class="container")
		div(class="row heading")
			div(class="col-xs-12 col-sm-12 col-md-4 col-lg-4 noPadd")
				h2 Registry

	div(class="container-fluid")
		div(class="container")
			div(class="row")
				div(class="col-xs-12 col-sm-12 col-md-5 col-lg-5")
					
					h3(style="margin: 140px 0 15px; text-align: center;") We are registered at
					a(href="http://www1.macys.com/registry/wedding/guest/?registryId=6084322")
						img(src="/images/macys-small.png", style="display: block; margin: 0 auto;")

				div(class="col-md-2 col-lg-2 line")
					i(class="fa fa-star", style="left:35%")

				div(class="col-xs-12 col-sm-12 col-md-5 col-lg-5 pull-right")
					div(style="text-align: left; height: 435px; width: 100%; overflow-x: hidden; overflow-y: scroll;padding-right: 35px;")
						ul(id="registry-list", style="list-style-type: none;")

	script(type="text/html", id="registryTemplate").
		{{#items}}
		<li style="margin-bottom: 40px;">
			<div class="row">
				<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
					<img src="{{imageUrl}}" width="100px" height="100px" />
				</div>
				<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 pull-right" style="text-align: right;">
					<a href="http://www1.macys.com/registry/wedding/guest/?registryId=6084322">{{title}}</a>
					<br/>
					<span>{{quantity}}</span>
					<br/>
					<br/>
					<span style='font-size: 2em;'>{{price}}</span>
				</div>
			</div>
		</li>
		{{/items}}
