section(class="white_section section_gap", id="rsvp")
	div(class="container")
		div(class="row heading")
			div(class="col-xs-12 col-sm-12 col-md-4 col-lg-4 noPadd")
				h2 RSVP
					span JOIN OUR PARTY
	div(class="container-fluid rsvpBack")
		div(class="container")
			div(class="row")
				div(class="col-xs-12 col-sm-12 col-md-6 col-lg-6 eventsLocation")
					h4 Event Location
					div(class="contactInfo mapArea")
						div(id="map", style="width: 100%; height: 100%")

					h4(style="margin-bottom:10px; margin-top: 25px") Address
					p(style="color: white"). 
						Monte Cristo Ballroom
						<br/>
						1507 Wall Street
						<br/>
						Everett, WA 98201


				div(class="col-xs-12 col-sm-12 col-md-5 col-lg-5 pull-right joinourParty")
					h4 Are you attending?
					div(class="form-container")
						div(class="heartline")
							hr
							i(class="fa fa-heart")
						div(class="row")
							div(id="message")
							form(method="post", action="/rsvp", id="cform")
								div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group form-row")
									input(type="text", class="normal", id="name", name="name", placeholder="Name")
								div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group form-row")
									input(type="email", class="normal", id="email", placeholder="Email Address", name="email")
								div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group form-row")
									select(class="normal", id="guest", name="guest")
										option(value="") Total Guests
										option(value="1") 1
										option(value="2") 2
										option(value="2") 3
										option(value="2") 4
								div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12")
									input(type="submit", id="submit", value="I'm attending", class="button")